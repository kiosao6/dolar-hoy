---
import { LastUpdate } from '@components/lastUpdate/LastUpdate'
interface Props {
  amount?: string;
}

const { amount = '0' } = Astro.props;

---

<div class="flex items-center flex-col space-y-4 my-14 text-6xl lg:text-7xl mx-auto w-fit font-semibold">
  <p>
    {`${ amount }`}
  </p>
  <div class="flex flex-col text-center text-xs space-y-1 text-neutral-500">
    <span class="font-normal">Última actualización</span>
    <LastUpdate />
  </div>
</div>
